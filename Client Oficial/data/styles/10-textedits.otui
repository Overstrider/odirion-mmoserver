TextEdit < UITextEdit
  font: verdana-11px-antialised
  color: #ceb18b
  size: 86 22
  text-offset: 0 4
  opacity: 1
  padding: 4
  image-source: /images/ui/textedit
  image-border: 3
  selection-color: #1d1816
  selection-background-color: #ceb18b
  $disabled:
    color: #27272788
    opacity: 0.5

PasswordTextEdit < TextEdit
  text-hidden: true

MultilineTextEdit < TextEdit
  multiline: true